<%= f.field_container :title do %>
  <%= f.label :title, t('press.title') %><br />
  <%= f.text_field :title, :class => 'title' %>
  <%= error_message_on :press, :title %>
<% end %>

<%= f.field_container :publication do %>
  <%= f.label :publication, t('press.publication') %><br />
  <%= f.text_field :publication, :class => 'text' %>
  <%= error_message_on :press, :publication %>
<% end %>

<%= f.field_container :published_at do %>
  <%= f.label :published_at, t('press.published_at') %><br />
  <%= form.text_field :published_at, :class => 'text', :value => (@post.posted_at.to_s(:long) unless @post.new_record?) %><br />
  <%= error_message_on :press, :published_at %>
<% end %>

<%= f.field_container :description do %>
  <%= f.label :description, t('press.description') %><br />
  <%= f.text_area :description, :class => 'text' %>
  <%= error_message_on :press, :description %>
<% end %>

<%= f.field_container :url do %>
  <%= f.label :url, t('press.url') %><br />
  <%= f.text_field :url, :class => 'text' %>
  <%= error_message_on :press, :url %>
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag "markitup.css" %>
  <%= javascript_include_tag 'date.js', 'jquery.autodate.js', 'jquery.markitup.js', 'markdown.set.js' %>
  <script type="text/javascript">
  //<![CDATA[
    $(document).ready(function() {
      $('#post_posted_at').autodate();
      $('#post_body').markItUp(markdownSettings);
    }); 
  //]]>
  </script>
<% end %>